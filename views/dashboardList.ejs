<%- include("./partials/header.ejs") %>

<h2>Your Dashboards</h2>

<% if (session && session.userId) { %>
  <a href="/dashboards/create" class="btn btn-primary mb-3">Create New Dashboard</a>
<% } %>

<div class="row">
  <% dashboards.forEach(d => { %>
    <div class="col-md-4">
      <div class="card mb-3" style="cursor:pointer;">
        <div class="card-body">

          <!-- Clickable Title -->
          <h5 class="card-title">
            <a href="/dashboards/<%= d._id %>" class="text-dark" style="text-decoration:none;">
              <%= d.title %>
            </a>
          </h5>

          <!-- Description preview -->
          <p class="card-text"><%= d.description.substring(0, 80) %>...</p>

        </div>
      </div>
    </div>
  <% }) %>
</div>

<%- include("./partials/footer.ejs") %>
