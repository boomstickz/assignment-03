<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>The Power Codex</title>

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <link rel="icon" type="image/png" href="/images/closed-book.png">
</head>

<body class="d-flex flex-column min-vh-100">

  <nav class="navbar navbar-dark px-4" style="height: 90px; background:#061825;">


    <% if (session && session.userId) { %>

      <!-- WITH OPEN BOOK LOGO -->
      <a class="navbar-brand d-flex align-items-center brand-hover-glow" href="/dashboards">
        <img src="/images/open-book.png"
             class="brand-book-icon"
             alt="Codex Logo">
        <span class="brand-title">The Power Codex</span>
      </a>

    <% } else { %>

      <!-- LANDING PAGE HEADER -->
      <a class="navbar-brand d-flex align-items-center brand-hover-glow" href="/">
        <span class="brand-title">The Power Codex</span>
      </a>

    <% } %>

    <ul class="navbar-nav flex-row gap-4">

      <% if (!session || !session.userId) { %>

        <li class="nav-item d-flex align-items-center">
          <a class="nav-link nav-big" href="/auth/login">
            <span class="nav-star">✦</span> Login
          </a>
        </li>

        <li class="nav-item d-flex align-items-center">
          <a class="nav-link nav-big" href="/auth/register">
            <span class="nav-star">✦</span> Register
          </a>
        </li>

      <% } else { %>

        <li class="nav-item d-flex align-items-center">
          <a class="nav-link nav-big" href="/dashboards">
            <span class="nav-star">✦</span> My Dashboards
          </a>
        </li>

        <li class="nav-item d-flex align-items-center">
          <a class="nav-link nav-big" href="/auth/logout">
            <span class="nav-star">✦</span> Logout
          </a>
        </li>

      <% } %>

    </ul>

  </nav>

<div class="container mt-4">

